{% extends 'NovifyBackBundle::base.html.twig' %}
{% block main %}




    <article>
        <div class="container">
            <h1>Ajouter un article</h1>
            
			<div class="info_form">
            	<fieldset>
		        <legend><h4>Pourquoi créer un nouvel article ?</h4></legend>
					<p>L'article est le point central du site, c'est la ou le visiteur doit être amené, vers l'article qu'il recherche.<br/>
					Il est trés important de donner le plus d'informations possible à l'article, afin d'informer le plus possible le visiteur.</p>
				</fieldset>
			</div>
            
			{{ form_start(form, {'method': 'POST', 'attr': {'id': 'formulaire', 'style':'padding-left: 20px;'}}) }}

			<fieldset id="form_art">
		        <legend><h4>Informations principales</h4></legend>
				<!-- Nom -->
	        	{{ form_label(form.artNom, 'Nom du nouvel article', {'label_attr': {'class':'art'}}) }}<br/>
				{{ form_widget(form.artNom) }}<br/><br/>
				<!-- -->

				<!-- Image de l'article -->
	        	{{ form_label(form.artImg, "Image de présentation de l'article", {'label_attr': {'class':'art'}}) }}<br/>
				{{ form_widget(form.artImg) }}<br/><br/>
				<!-- -->

				<!-- Description -->
	        	{{ form_label(form.artDescript, "Description") }}<br/>
				{{ form_widget(form.artDescript) }}<br/><br/>
				<!-- -->

				<!-- Prix -->
	        	{{ form_label(form.artPrix, "Prix") }}<br/>
				{{ form_widget(form.artPrix) }}<br/><br/>
				<!-- -->

				<!-- Date de sorie -->
	        	{{ form_label(form.artDateSortie, "Date de sortie") }}<br/>
				{{ form_widget(form.artDateSortie) }}<br/><br/>
				<!-- -->

				<!-- Référence -->
	        	{{ form_label(form.artRef, "Référence") }}<br/>
				{{ form_widget(form.artRef) }}<br/><br/>
				<!-- -->

				<!-- Stock -->
	        	{{ form_label(form.artStock, "Nombre d'articles disponibles à la vente sur le site", {'label_attr': {'class':'art'}}) }}<br/>
				{{ form_widget(form.artStock) }}
				<span>Vous devez indiquer une valeur numérique, 1 étant la valeur minimum.</span><br/><br/>
				<!-- -->

				<!-- Sous catégorie -->
	        	{{ form_label(form.sousCategorie, "Sous Catégorie") }}<br/>
	        	Indiquez la sous Catégorie de l'article, il trouvera automatiquement la catgéorie qui lui est associé.<br/>
				{{ form_widget(form.sousCategorie) }}<br/><br/>
				<!-- -->
			</fieldset>

			<fieldset id="form_art">
		        <legend><h4>Informations secondaires</h4></legend>
				<!-- Auteur -->
	        	{{ form_label(form.artAuteur, "Auteur") }}<br/>
				{{ form_widget(form.artAuteur, {'attr': {'class': 'non_obligatoire'}}) }}<br/><br/>
				<!-- -->

				<!-- Réalisateur -->
	        	{{ form_label(form.artRealisat, "Réalisateur") }}<br/>
				{{ form_widget(form.artRealisat, {'attr': {'class': 'non_obligatoire'}}) }}<br/><br/>
				<!-- -->

				<!-- Éditeur -->
	        	{{ form_label(form.artEditeur, "Éditeur") }}<br/>
				{{ form_widget(form.artEditeur, {'attr': {'class': 'non_obligatoire'}}) }}<br/><br/>
				<!-- -->

				<!-- Genre -->
	        	{{ form_label(form.artGenre, "Genres") }}<br/>
				{{ form_widget(form.artGenre, {'attr': {'class': 'non_obligatoire'}}) }}<br/><br/>
				<!-- -->

				<!-- Casting -->
	        	{{ form_label(form.artCasting, "Casting") }}<br/>
				{{ form_widget(form.artCasting, {'attr': {'class': 'non_obligatoire'}}) }}<br/><br/>
				<!-- -->

				<!-- Type de public -->
	        	{{ form_label(form.artPublic, "Type de public") }}<br/>
				{{ form_widget(form.artPublic, {'attr': {'class': 'non_obligatoire'}}) }}
				<span>Indiquez le type de public sous cette forme : -12, -16 …</span><br/><br/>
				<!-- -->

				<!-- ISBN -->
	        	{{ form_label(form.artIsbn, "ISBN") }}<br/>
				{{ form_widget(form.artIsbn, {'attr': {'class': 'non_obligatoire'}}) }}
				<span>L'ISBN est le numéro d'identification d'un livre</span><br/><br/>
				<!-- -->

				<!-- Durée -->
	        	{{ form_label(form.artDuree, "Durée du film") }}<br/>
				{{ form_widget(form.artDuree, {'attr': {'class': 'non_obligatoire'}}) }}
				<span>Indiquez la durée du film en minute, exemple : 136min</span><br/><br/>
				<!-- -->

				<!-- Pages -->
	        	{{ form_label(form.artPages, "Indiquez le nombre de pages", {'label_attr': {'class':'art'}}) }}<br/>
				{{ form_widget(form.artPages, {'attr': {'class': 'non_obligatoire'}}) }}<br/><br/>
				<!-- -->

				<!-- Plateforme -->
	        	{{ form_label(form.artPlateforme, "Plateforme/Console de jeux", {'label_attr': {'class':'art'}}) }}<br/>
				{{ form_widget(form.artPlateforme, {'attr': {'class': 'non_obligatoire'}}) }}<br/><br/>
				<!-- -->	

				<!-- Promo -->
	        	{{ form_label(form.artPromo, "Promotion sur l'article") }}<br/>
	        	Si vous voulez que votre article ait une promotion, indiquez le ici, il sera alors directement intégré à la page "promotion", avec la promotion renseigner.<br/>
				{{ form_widget(form.artPromo, {'attr': {'class': 'non_obligatoire'}}) }}<br/><br/>
				<!-- -->
			</fieldset>

			<input type="submit" id="valider" value="Valider" style="float:right;"/>

			{# Rend le formulaire html #}
			{{ form_end(form) }}

        </div>
    </article>




{% endblock %}
