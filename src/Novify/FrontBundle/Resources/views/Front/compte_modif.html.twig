							<!-- -->

							<!-- Téléphone -->
							{{ form_label(form.userFactTel, 'Téléphone') }}<br/>
							{{ form_widget(form.userFactTel, {'attr': {'class': 'non_obligatoire', 'value': '+33', 'maxlength':'12'}}) }}
								<span>Vous devez entrer uniquement des numéros dans ce champs (à l'excéption du +)</span><br/><br/>
							<!-- -->

							<!-- civilité -->
							{{ form_label(form.userFactCivilite, 'Civilité') }}<br/>
							{{ form_widget(form.userFactCivilite) }}<br/><br/>
							<!-- -->

							<!-- Rue -->
							{{ form_label(form.userFactAdresse, 'Rue') }}<br/>
							{{ form_widget(form.userFactAdresse, {'attr': {'class': 'non_obligatoire'}}) }}
								<span>N°, Nom, puis le n° du batiment si nécéssaire</span><br/><br/>
							<!-- -->

