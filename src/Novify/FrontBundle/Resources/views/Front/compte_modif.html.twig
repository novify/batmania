							{{ form_label(form.userFactVille, 'Ville', {'label_attr': {'class': 'ville'}}) }}
							{{ form_label(form.userFactCodep, 'Code Postal') }}<br/>
							{{ form_widget(form.userFactVille, {'attr': {'class': 'non_obligatoire'}}) }}
							<span>Vous devez entrez le nom de la ville ou la facture sera adressé</span>
							{{ form_widget(form.userFactCodep, {'attr': {'class': 'non_obligatoire', 'maxlength':'5'}}) }}
							<span>Vous devez renseigner le code postal de la ville (nombre à 5 chiffres)</span><br/><br/>
				        	<!-- -->

				        	<!-- Pays -->
				        	{{ form_label(form.userFactPays, 'Pays') }}<br/>
							{{ form_widget(form.userFactPays) }}<br/><br/>
