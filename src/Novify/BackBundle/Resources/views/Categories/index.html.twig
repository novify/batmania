{% extends 'NovifyBackBundle::base.html.twig' %}
{% block main %}




    <article>
        <div class="container catagories">
            <h1>Catégories</h1> <!-- Titre de la section -->
            
            <!-- Ajouter une catégorie -->
            <p class="ajouter"><a href="{{ path('novify_back_categorie_add') }}"><i class="glyphicon-plus"></i> Ajouter</a></p>


            <table>

                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Bannière</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>

                <tbody>
{% for categorie in categories %}
                    <tr>
                        <td>{{ categorie.id }}</td>
                        <td>{{ categorie.catNom }}</td>
                        <td>{{ categorie.catBanniere }}</td>
                        <td><a href="{{ path('novify_back_categorie_edit', {id: categorie.id}) }}">Modifier</a></td>
                        <td><a href="{{ path('novify_back_categorie_remove', {id: categorie.id}) }}">Supprimer</a></td>
                    </tr>

{% endfor %}

                </tbody>

            </table>


        </div>
    </article>




{% endblock %}
