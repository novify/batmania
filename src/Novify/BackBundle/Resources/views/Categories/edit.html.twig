{% extends 'NovifyBackBundle::base.html.twig' %}
{% block main %}




    <article>
        <div class="container catagories">
            <h1>Modifer la catégorie</h1> <!-- Titre de la section -->
            
			<div class="info_form">
            	<fieldset>
		        <legend><h4>Pourquoi modifier une catégorie ?</h4></legend>
				<p>En modifiant la catégorie vous pourrez changer son nom, ou encore l'image de bannière qui lui est associé.<br/>
				</fieldset>
			</div>
            
			{{ form_start(form, {'method': 'POST', 'attr': {'id': 'formulaire', 'style':'padding-left: 20px;'}}) }}


			<!-- Nom de la catégorie -->
        	{{ form_label(form.catNom, 'Nom de la catégorie', {'label_attr': {'class': 'cat'}}) }}<br/>
			{{ form_widget(form.catNom) }}<br/><br/>
			<!-- -->

			<!-- Image-bannière de la catégorie -->
        	{{ form_label(form.catBanniere, 'Image pour la bannière', {'label_attr': {'class': 'cat'}}) }}<br/>
			{{ form_widget(form.catBanniere, {'attr': {'class': 'non_obligatoire'}}) }}<br/><br/>
			<!-- -->

			<input type="submit" id="valider_les_modifs" value="Valider les modifications"/>

			{# Rend le formulaire html #}
			{{ form_end(form) }}

			<a href="{{ path('novify_back_categorie_index') }}" id="retour">Retour</a>

        </div>
    </article>




{% endblock %}
